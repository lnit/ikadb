%div{"ng-controller" => "GearsController"}
  .panel{class: random_color_class("panel")}
    .panel-heading
      %h3.panel-title= t(".search.title")
    .panel-body
      %form.form-horizontal{"ng-submit" => "search()"}
        .col-lg-4
          .form-group
            %label.control-label.col-lg-2= t(".search.name")
            .col-lg-10
              = text_field_tag "params[name]", "", "ng-model" => "params.name", :class => "form-control"
          .form-group
            %label.control-label.col-lg-2= t(".search.type")
            .col-lg-10
              = select_tag "params[type]", gear_type_columns_for_select, "ng-model" => "params.type", :include_blank => true, :multiple => true, :class => "form-control searchable"
          .form-group
            %label.control-label.col-lg-2= t(".search.slot")
            .col-lg-10
              .checkbox
                %label.col-lg-1
                  = check_box_tag "params[slot][1]", true, false, "ng-model" => "params.slot.s1"
                  1
                %label.col-lg-1
                  = check_box_tag "params[slot][2]", true, false, "ng-model" => "params.slot.s2"
                  2
                %label.col-lg-1
                  = check_box_tag "params[slot][3]", true, false, "ng-model" => "params.slot.s3"
                  3
        .col-lg-8
          .form-group
            %label.control-label.col-lg-2= t(".search.power")
            .col-lg-10
              = select_tag "params[power]", gear_power_columns_for_select, "ng-model" => "params.power", :include_blank => true, :multiple => true, :class => "form-control searchable"
          .form-group
            %label.control-label.col-lg-2= t(".search.brand")
            .col-lg-10
              = select_tag "params[brand]", gear_brand_columns_for_select, "ng-model" => "params.brand", :include_blank => true, :multiple => true, :class => "form-control searchable"
        .col-lg-12
          = submit_tag t("common.search"), class: "btn #{random_color_class('btn')}"

  .panel{class: random_color_class("panel")}
    .panel-heading
      %h3.panel-title= t(".list.title")
    .panel-body
      %table.table.table-striped.table-hover
        %thead
          %tr
            %th= t(".list.name")
            %th= t(".list.type")
            %th= t(".list.slot")
            %th= t(".list.power")
            %th= t(".list.brand")
        %tbody
          %tr.gear{"ng-repeat" => "gear in gears"}
            %td {{gear.name}}
            %td {{gear.type_name}}
            %td {{gear.slot}}
            %td {{gear.power.name}}
            %td {{gear.brand.description}}

- content_for(:title) do
  = t(".title")
